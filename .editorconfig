# This file is for unifying the coding style for different editors and IDEs
# See editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
max_line_length = 100
insert_final_newline = true

[*.md]
max_line_length = 0
trim_trailing_whitespace = false
